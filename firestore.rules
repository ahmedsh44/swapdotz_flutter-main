rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // NFC sessions - users can only access their own sessions
    match /nfc_sessions/{sessionId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      
      match /commands/{commandId} {
        allow read: if request.auth != null 
          && request.auth.uid == get(/databases/$(database)/documents/nfc_sessions/$(sessionId)).data.userId;
      }
    }
    
    // Crypto keys - only admin can access
    match /crypto_keys/{keyId} {
      allow read, write: if request.auth != null 
        && request.auth.token.admin == true;
    }
  }
}